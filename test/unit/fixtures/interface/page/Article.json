{
  "moduleName": "Article",
  "moduleGroup": "Page",
  "uri": "ArticlePage",
  "props": {
    "view": "vue",
    "layout": "UserLayout"
  },
  "routes": [
    {
      "actionName": "list",
      "uri": "ArticlePage.list",
      "middlewares": [
        {
          "name": "meta",
          "props": {
            "keywords": "关键字列表",
            "description": "页面描述"
          }
        },
        {
          "name": "title",
          "props": "文章列表"
        },
        {
          "name": "route",
          "props": {
            "method": "GET"
          }
        },
        {
          "name": "res",
          "props": {
            "props": {
              "articles": "Array<ArticleItem>"
            },
            "refs": {
              "ArticleItem": {
                "name": "ArticleItem",
                "props": {
                  "id": "Number",
                  "title": "String",
                  "content": "String"
                }
              }
            }
          }
        }
      ]
    },
    {
      "actionName": "view",
      "uri": "ArticlePage.view",
      "middlewares": [
        {
          "name": "auth",
          "props": null
        },
        {
          "name": "req",
          "props": {
            "props": {
              "aid": "String"
            }
          }
        },
        {
          "name": "route",
          "props": {
            "method": "GET",
            "path": "/articles/:aid"
          }
        },
        {
          "name": "res",
          "props": {
            "props": {
              "article": "ArticleItem"
            }
          }
        }
      ]
    },
    {
      "actionName": "modify",
      "uri": "ArticlePage.modify",
      "middlewares": [
        {
          "name": "vue",
          "props": {
            "component": "Article/ArticleModify"
          }
        },
        {
          "name": "auth",
          "props": null
        },
        {
          "name": "route",
          "props": {
            "method": "GET",
            "path": "modify/:id?"
          }
        }
      ]
    },
    {
      "actionName": "update",
      "uri": "ArticlePage.update",
      "middlewares": [
        {
          "name": "vue",
          "props": {
            "component": "Article/ArticleModify"
          }
        },
        {
          "name": "auth",
          "props": null
        },
        {
          "name": "route",
          "props": {
            "method": "POST",
            "path": "update/:aid"
          }
        }
      ]
    },
    {
      "actionName": "comment",
      "uri": "ArticlePage.comment",
      "middlewares": [
        {
          "name": "vue",
          "props": false
        },
        {
          "name": "route",
          "props": {
            "method": "POST",
            "path": "comment/:aid"
          }
        }
      ]
    }
  ]
}